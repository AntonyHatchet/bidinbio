extends ../layout

block content
  .page-header
    h2
      i.fa.fa-facebook-square(style='color: #335397')
      | Facebook API
  .btn-group.btn-group-justified
    a.btn.btn-primary(href='https://developers.facebook.com/docs/graph-api/quickstart/', target='_blank')
      i.fa.fa-check-square-o
      | Quickstart
    a.btn.btn-primary(href='https://developers.facebook.com/tools/explorer', target='_blank')
      i.fa.fa-facebook
      | Graph API Explorer
    a.btn.btn-primary(href='https://developers.facebook.com/docs/graph-api/reference/', target='_blank')
      i.fa.fa-code-fork
      | API Reference

  h3
    i.fa.fa-user
    |  My Profile
  img.thumbnail(src=profile.profile_picture_url || `https://graph.facebook.com/${profile.id}/picture?type=large`, width='90', height='90', alt=(profile.name || profile.username))
  h4= profile.name
  h6 First Name: #{profile.first_name}
  h6 Last Name: #{profile.last_name}
  h6 Gender: #{profile.gender}
  h6 Username: #{profile.username}
  h6 Link: #{profile.link}
  h6 Email: #{profile.email}
  h6 Locale: #{profile.locale}
  h6 Timezone: #{profile.timezone}
  h6 Media:
    each key in Object.keys(profile.mediaByProfile)
      h6 Profile ID: #{key}
      each media in profile.mediaByProfile[key]
        img(src=media.media_url)
        p likes:#{media.like_count}
        if media.comments
          b Comments:
          each comment in media.comments.data
            p #{comment.text} - #{comment.timestamp}
